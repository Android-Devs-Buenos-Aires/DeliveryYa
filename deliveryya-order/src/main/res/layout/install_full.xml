<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardBackgroundColor="@color/white_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_install"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center|left"
            android:text="@string/install_lbl"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/greay_strong2"
            android:textStyle="bold" />

        <Button
            android:id="@+id/installBtn"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/download"
            android:background="@drawable/install_button_selector"
            android:textColor="@color/white"
            android:text="@string/install_lbl_btn" />
    </LinearLayout>
</android.support.v7.widget.CardView>